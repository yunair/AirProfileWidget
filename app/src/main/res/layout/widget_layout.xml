<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/widget_button"
        android:layout_width="@dimen/widget_button_layout_width"
        android:layout_height="@dimen/widget_button_layout_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/widget_button_layout_marginTop"
        android:background="@drawable/widget_button">
        <ImageView
            android:id="@+id/widget_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/widget_icon_layout_marginTop"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/widget_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_label_layout_height"
        android:layout_below="@id/widget_button"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/widget_label_layout_marginTop"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="@dimen/widget_label_padding_top"/>
</RelativeLayout>